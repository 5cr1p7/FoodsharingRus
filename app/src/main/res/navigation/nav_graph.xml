<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.foodkapev.foodsharingrus.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addPostActivity"
            app:destination="@id/addPostActivity" />
    </fragment>
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.foodkapev.foodsharingrus.fragments.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_notificationsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.foodkapev.foodsharingrus.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_notificationsFragment"
            app:destination="@id/notificationsFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
        <action
            android:id="@+id/action_profileFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.foodkapev.foodsharingrus.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.foodkapev.foodsharingrus.fragments.PostDetailsFragment"
        android:label="fragment_post_details"
        tools:layout="@layout/fragment_post_details" >
        <action
            android:id="@+id/action_postDetailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>
    <activity
        android:id="@+id/accountSettingsActivity"
        android:name="com.foodkapev.foodsharingrus.AccountSettingsActivity"
        android:label="activity_account_settings"
        tools:layout="@layout/activity_account_settings" />
    <activity
        android:id="@+id/addPostActivity"
        android:name="com.foodkapev.foodsharingrus.AddPostActivity"
        android:label="activity_add_post"
        tools:layout="@layout/activity_add_post" />
    <activity
        android:id="@+id/privacyPolicyActivity"
        android:name="com.foodkapev.foodsharingrus.PrivacyPolicyActivity"
        android:label="activity_privacy_policy"
        tools:layout="@layout/activity_privacy_policy" />
</navigation>
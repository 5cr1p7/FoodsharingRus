<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image_post_details"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/user_name_post_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Username"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/post_image_home_details"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"
            android:layout_below="@id/linear1"/>

        <RelativeLayout
            android:id="@+id/post_relative_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/post_image_home_details">

            <ImageView
                android:id="@+id/post_image_like_btn_details"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_favorite_border_black_48"
                />

            <ImageView
                android:id="@+id/post_image_comment_btn_details"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/post_image_like_btn_details"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/outline_mode_comment_black_48"
                />

        </RelativeLayout>


